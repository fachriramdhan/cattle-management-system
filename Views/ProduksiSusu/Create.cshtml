@model SimSapi.Models.ProduksiSusu
@{
    ViewData["Title"] = "Tambah Produksi Susu";
}

<div class="max-w-3xl mx-auto space-y-6">

    <!-- ================= HEADER ================= -->
    <div class="relative bg-slate-900 border border-slate-800 rounded-2xl p-6 shadow overflow-hidden">

        <!-- ICON SUSU (KIRI - BACKGROUND) -->
        <i class="fas fa-glass-whiskey absolute left-6 top-1/2 -translate-y-1/2
                  text-[180px] text-emerald-500/10
                  pointer-events-none select-none"></i>

        <div class="relative pl-2 md:pl-20">
            <h2 class="text-xl font-bold text-white">
                Tambah Produksi Susu
            </h2>
            <p class="text-slate-400 text-sm mt-1">
                Catat hasil pemerahan susu sapi
            </p>
        </div>
    </div>

    <!-- ================= FORM ================= -->
    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow p-6">

        <form asp-action="Create" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm"></div>

            <!-- PILIH SAPI -->
            <div>
                <label asp-for="SapiId" class="block text-slate-300 font-medium mb-2">
                    Pilih Sapi
                </label>
                <select asp-for="SapiId"
                        asp-items="ViewBag.SapiId"
                        class="w-full bg-slate-950 border border-slate-800 text-slate-200
                               rounded-xl px-4 py-2
                               focus:outline-none focus:ring-2 focus:ring-emerald-500">
                    <option value="">-- Pilih Sapi --</option>
                </select>
                <span asp-validation-for="SapiId" class="text-red-400 text-sm"></span>
            </div>

            <!-- TANGGAL & WAKTU -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Tanggal" class="block text-slate-300 font-medium mb-2">
                        Tanggal Perah
                    </label>
                    <input asp-for="Tanggal"
                           type="date"
                           value="@DateTime.Now.ToString("yyyy-MM-dd")"
                           class="w-full bg-slate-950 border border-slate-800 text-slate-200
                                  rounded-xl px-4 py-2
                                  focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span asp-validation-for="Tanggal" class="text-red-400 text-sm"></span>
                </div>

                <div>
                    <label asp-for="WaktuPerah" class="block text-slate-300 font-medium mb-2">
                        Waktu Perah
                    </label>
                    <select asp-for="WaktuPerah"
                            class="w-full bg-slate-950 border border-slate-800 text-slate-200
                                   rounded-xl px-4 py-2
                                   focus:outline-none focus:ring-2 focus:ring-emerald-500">
                        <option value="0">Pagi</option>
                        <option value="1">Sore</option>
                    </select>
                    <span asp-validation-for="WaktuPerah" class="text-red-400 text-sm"></span>
                </div>
            </div>

            <!-- VOLUME -->
            <div>
                <label asp-for="VolumeLiter" class="block text-slate-300 font-medium mb-2">
                    Volume Susu
                </label>
                <div class="relative">
                    <input asp-for="VolumeLiter"
                           type="number"
                           step="0.01"
                           min="0"
                           placeholder="0.00"
                           class="w-full bg-slate-950 border border-slate-800 text-slate-200
                                  rounded-xl px-4 py-2 pr-16
                                  focus:outline-none focus:ring-2 focus:ring-emerald-500" />
                    <span class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-400 text-sm">
                        Liter
                    </span>
                </div>
                <span asp-validation-for="VolumeLiter" class="text-red-400 text-sm"></span>
            </div>

            <!-- ACTION BUTTON -->
            <div class="flex gap-4 pt-4">
                <button type="submit"
                        class="flex-1 bg-emerald-500/10 text-emerald-400
                               hover:bg-emerald-500/20
                               py-3 rounded-xl transition
                               flex items-center justify-center gap-2">
                    <i class="fas fa-save"></i>
                    Simpan
                </button>

                <a asp-action="Index"
                   class="flex-1 bg-slate-800 hover:bg-slate-700
                          text-white py-3 rounded-xl transition
                          flex items-center justify-center gap-2">
                    <i class="fas fa-arrow-left"></i>
                    Kembali
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
