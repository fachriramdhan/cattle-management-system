@model SimSapi.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<style>
    /* Scrollbar */
    .custom-scrollbar::-webkit-scrollbar { width: 6px; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background:#334155; border-radius:6px }
</style>

<div class="space-y-8">

    <!-- ================= STAT CARDS ================= -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6">

        <!-- Total Sapi -->
        <div class="relative overflow-hidden rounded-2xl bg-slate-900 border border-slate-800 p-6 shadow">
            <div class="absolute -top-6 -right-6 text-sky-500/10 text-[5rem]">
                <i class="fas fa-cow"></i>
            </div>
            <p class="text-sm text-slate-400">Total Sapi</p>
            <h3 class="text-3xl font-bold text-white mt-2">@Model.TotalSapi</h3>
            <p class="text-xs text-sky-400 mt-2 flex items-center gap-1">
                <i class="fas fa-circle"></i> Aktif
            </p>
        </div>

        <!-- Total Peternak -->
        <div class="relative overflow-hidden rounded-2xl bg-slate-900 border border-slate-800 p-6 shadow">
            <div class="absolute -top-6 -right-6 text-emerald-500/10 text-[5rem]">
                <i class="fas fa-users"></i>
            </div>
            <p class="text-sm text-slate-400">Total Peternak</p>
            <h3 class="text-3xl font-bold text-white mt-2">@Model.TotalPeternak</h3>
            <p class="text-xs text-emerald-400 mt-2">Terdaftar</p>
        </div>

        <!-- Produksi -->
        <div class="relative overflow-hidden rounded-2xl bg-slate-900 border border-slate-800 p-6 shadow">
            <div class="absolute -top-6 -right-6 text-indigo-500/10 text-[5rem]">
                <i class="fas fa-droplet"></i>
            </div>
            <p class="text-sm text-slate-400">Produksi Hari Ini</p>
            <h3 class="text-3xl font-bold text-white mt-2">
                @Model.ProduksiHariIni.ToString("N1")
            </h3>
            <p class="text-xs text-indigo-400 mt-2">Liter</p>
        </div>

        <!-- Pendapatan -->
        <div class="relative overflow-hidden rounded-2xl bg-slate-900 border border-slate-800 p-6 shadow">
            <div class="absolute -top-6 -right-6 text-orange-500/10 text-[5rem]">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <p class="text-sm text-slate-400">Pendapatan Bulan Ini</p>
            <h3 class="text-3xl font-bold text-white mt-2">
                @Model.TotalPendapatan.ToString("N0")
            </h3>
            <p class="text-xs text-orange-400 mt-2">Rupiah</p>
        </div>

    </div>

    <!-- ================= MAIN GRID ================= -->
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-6">

        <!-- ================= CHART ================= -->
        <div class="xl:col-span-2 bg-slate-900 border border-slate-800 rounded-2xl p-6 shadow flex flex-col">
            <div class="mb-4">
                <h2 class="text-lg font-bold text-white flex items-center gap-2">
                    <i class="fas fa-chart-area text-sky-400"></i>
                    Tren Produksi 7 Hari
                </h2>
                <p class="text-sm text-slate-400 mt-1">
                    Grafik produksi susu mingguan
                </p>
            </div>

            <div class="relative flex-1 min-h-[260px]">
                <canvas id="productionChart"></canvas>
            </div>

            <!-- Summary -->
            <div class="grid grid-cols-3 gap-4 mt-6 pt-4 border-t border-slate-800">
                <div class="text-center">
                    <p class="text-xs text-slate-400">Total</p>
                    <p class="text-2xl font-bold text-sky-400">
                        @Model.TrenProduksi.Sum(t => t.TotalLiter).ToString("N1")
                    </p>
                </div>
                <div class="text-center">
                    <p class="text-xs text-slate-400">Rata-rata</p>
                    <p class="text-2xl font-bold text-emerald-400">
                        @((Model.TrenProduksi.Any() ? (Model.TrenProduksi.Sum(t => t.TotalLiter) / 7).ToString("N1") : "0"))
                    </p>
                </div>
                <div class="text-center">
                    <p class="text-xs text-slate-400">Tertinggi</p>
                    <p class="text-2xl font-bold text-indigo-400">
                        @((Model.TrenProduksi.Any() ? Model.TrenProduksi.Max(t => t.TotalLiter).ToString("N1") : "0"))
                    </p>
                </div>
            </div>
        </div>

        <!-- ================= ACTIVITY ================= -->
        <div class="bg-slate-900 border border-slate-800 rounded-2xl p-6 shadow flex flex-col">
            <h2 class="text-lg font-bold text-white flex items-center gap-2 mb-4">
                <i class="fas fa-clock text-sky-400"></i>
                Aktivitas Terbaru
            </h2>

            <div class="flex-1 space-y-3 overflow-y-auto custom-scrollbar pr-1">
                @if (Model.RecentActivities.Any())
                {
                    @foreach (var activity in Model.RecentActivities.Take(5))
                    {
                        <div class="flex gap-3 p-3 rounded-xl border border-slate-800 bg-slate-950">
                            <div class="@activity.IconColor w-10 h-10 rounded-lg flex items-center justify-center">
                                <i class="fas @activity.Icon text-white text-sm"></i>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-semibold text-white">@activity.Title</p>
                                <p class="text-xs text-slate-400 line-clamp-2">
                                    @activity.Description
                                </p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-slate-500 text-center mt-6">
                        Belum ada aktivitas
                    </p>
                }
            </div>

            <!-- Quick Actions -->
            <div class="grid grid-cols-2 gap-3 mt-5 text-sm">
                <a asp-controller="ProduksiSusu" asp-action="Create"
                   class="flex justify-center items-center gap-2 bg-sky-500/10 text-sky-400 py-2 rounded-xl hover:bg-sky-500/20">
                    <i class="fas fa-plus"></i> Produksi
                </a>
                <a asp-controller="Sapi" asp-action="Index"
                   class="flex justify-center items-center gap-2 bg-emerald-500/10 text-emerald-400 py-2 rounded-xl hover:bg-emerald-500/20">
                    <i class="fas fa-cow"></i> Sapi
                </a>
                <a asp-controller="Report" asp-action="Index"
                   class="flex justify-center items-center gap-2 bg-indigo-500/10 text-indigo-400 py-2 rounded-xl hover:bg-indigo-500/20">
                    <i class="fas fa-file-pdf"></i> Laporan
                </a>
                <a asp-controller="KesehatanSapi" asp-action="Index"
                   class="flex justify-center items-center gap-2 bg-orange-500/10 text-orange-400 py-2 rounded-xl hover:bg-orange-500/20">
                    <i class="fas fa-heartbeat"></i> Kesehatan
                </a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
<script>
    const labels = @Html.Raw(Json.Serialize(Model.TrenProduksi.Select(t => t.Tanggal)));
    const dataLiter = @Html.Raw(Json.Serialize(Model.TrenProduksi.Select(t => t.TotalLiter)));

    const ctx = document.getElementById('productionChart').getContext('2d');
    const gradient = ctx.createLinearGradient(0,0,0,300);
    gradient.addColorStop(0,'rgba(56,189,248,0.35)');
    gradient.addColorStop(1,'rgba(56,189,248,0.05)');

    new Chart(ctx,{
        type:'line',
        data:{
            labels:labels,
            datasets:[{
                data:dataLiter,
                borderColor:'#38bdf8',
                backgroundColor:gradient,
                borderWidth:3,
                fill:true,
                tension:0.4,
                pointRadius:4
            }]
        },
        options:{
            responsive:true,
            maintainAspectRatio:false,
            plugins:{legend:{display:false}},
            scales:{
                y:{beginAtZero:true, grid:{color:'#1e293b'}},
                x:{grid:{display:false}}
            }
        }
    });
</script>
}
