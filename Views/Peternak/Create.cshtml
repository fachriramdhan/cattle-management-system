@model SimSapi.Models.Peternak
@{
    ViewData["Title"] = "Tambah Peternak";
}

<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">Tambah Data Peternak</h3>
        
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="KodePeternak" class="block text-gray-700 font-medium mb-2">Kode Peternak</label>
                    <input asp-for="KodePeternak" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="PT-001" />
                    <span asp-validation-for="KodePeternak" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="NamaLengkap" class="block text-gray-700 font-medium mb-2">Nama Lengkap</label>
                    <input asp-for="NamaLengkap" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="John Doe" />
                    <span asp-validation-for="NamaLengkap" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <div class="mb-4">
                <label asp-for="Alamat" class="block text-gray-700 font-medium mb-2">Alamat</label>
                <textarea asp-for="Alamat" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="Alamat lengkap"></textarea>
                <span asp-validation-for="Alamat" class="text-red-600 text-sm"></span>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="NoTelepon" class="block text-gray-700 font-medium mb-2">No. Telepon</label>
                    <input asp-for="NoTelepon" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="08123456789" />
                    <span asp-validation-for="NoTelepon" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Email</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="email@example.com" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <div class="mb-6">
                <label class="flex items-center">
                    <input asp-for="IsActive" type="checkbox" checked class="w-4 h-4 text-green-600 border-gray-300 rounded focus:ring-green-500" />
                    <span class="ml-2 text-gray-700">Status Aktif</span>
                </label>
            </div>
            
            <div class="flex gap-4">
                <button type="submit" class="flex-1 bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg transition flex items-center justify-center gap-2">
                    <i class="fas fa-save"></i>
                    Simpan
                </button>
                <a asp-action="Index" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 py-3 rounded-lg transition flex items-center justify-center gap-2">
                    <i class="fas fa-times"></i>
                    Batal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}