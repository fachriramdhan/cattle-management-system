@model SimSapi.Models.ProduksiOlahan
@{
    ViewData["Title"] = "Edit Produksi Olahan";
}

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
        <div class="flex items-center gap-4 mb-6">
            <div class="bg-blue-100 rounded-full p-4">
                <i class="fas fa-edit text-blue-600 text-2xl"></i>
            </div>
            <div>
                <h3 class="text-2xl font-bold text-gray-800">Edit Produksi Olahan</h3>
                <p class="text-gray-600 text-sm">Update data produk olahan susu</p>
            </div>
        </div>
        
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CreatedAt" />
            
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg mb-6"></div>
            
            <!-- Informasi Produk -->
            <div class="border-b border-gray-200 pb-4 mb-6">
                <h4 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
                    <i class="fas fa-box text-orange-600"></i>
                    Informasi Produk
                </h4>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="NamaProduk" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-tag text-gray-400"></i> Nama Produk
                    </label>
                    <input asp-for="NamaProduk" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" />
                    <span asp-validation-for="NamaProduk" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="JenisOlahan" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-list text-gray-400"></i> Jenis Olahan
                    </label>
                    <select asp-for="JenisOlahan" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <option value="0">Yogurt</option>
                        <option value="1">Keju</option>
                        <option value="2">Susu Pasteurisasi</option>
                        <option value="3">Mentega</option>
                        <option value="4">Es Krim</option>
                        <option value="5">Kefir</option>
                        <option value="6">Susu Bubuk</option>
                        <option value="99">Lainnya</option>
                    </select>
                    <span asp-validation-for="JenisOlahan" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div>
                    <label asp-for="JumlahProduksi" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-weight text-gray-400"></i> Jumlah Produksi
                    </label>
                    <input asp-for="JumlahProduksi" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" />
                    <span asp-validation-for="JumlahProduksi" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Satuan" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-balance-scale text-gray-400"></i> Satuan
                    </label>
                    <select asp-for="Satuan" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <option value="Kg">Kg (Kilogram)</option>
                        <option value="Liter">Liter</option>
                        <option value="Pcs">Pcs (Pieces)</option>
                        <option value="Pack">Pack</option>
                        <option value="Box">Box</option>
                    </select>
                    <span asp-validation-for="Satuan" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="BahanBakuSusu" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-fill-drip text-gray-400"></i> Bahan Baku Susu (L)
                    </label>
                    <input asp-for="BahanBakuSusu" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" />
                    <span asp-validation-for="BahanBakuSusu" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <!-- Tanggal -->
            <div class="border-b border-gray-200 pb-4 mb-6 mt-8">
                <h4 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
                    <i class="fas fa-calendar text-orange-600"></i>
                    Tanggal & Status
                </h4>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                <div>
                    <label asp-for="TanggalProduksi" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-calendar-day text-gray-400"></i> Tanggal Produksi
                    </label>
                    <input asp-for="TanggalProduksi" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" />
                    <span asp-validation-for="TanggalProduksi" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="TanggalKadaluarsa" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-calendar-times text-gray-400"></i> Tanggal Kadaluarsa
                    </label>
                    <input asp-for="TanggalKadaluarsa" type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" />
                    <span asp-validation-for="TanggalKadaluarsa" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="StatusProduksi" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-check-circle text-gray-400"></i> Status
                    </label>
                    <select asp-for="StatusProduksi" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <option value="Tersedia">Tersedia</option>
                        <option value="Terjual">Terjual</option>
                        <option value="Kadaluarsa">Kadaluarsa</option>
                    </select>
                    <span asp-validation-for="StatusProduksi" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <!-- Biaya & Harga -->
            <div class="border-b border-gray-200 pb-4 mb-6 mt-8">
                <h4 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
                    <i class="fas fa-money-bill-wave text-orange-600"></i>
                    Biaya & Harga
                </h4>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="BiayaProduksi" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-coins text-gray-400"></i> Biaya Produksi (Rp)
                    </label>
                    <input asp-for="BiayaProduksi" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" />
                    <span asp-validation-for="BiayaProduksi" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="HargaJual" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-tag text-gray-400"></i> Harga Jual (Rp)
                    </label>
                    <input asp-for="HargaJual" type="number" step="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500" />
                    <span asp-validation-for="HargaJual" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <div class="mb-6">
                <label asp-for="Keterangan" class="block text-gray-700 font-medium mb-2">
                    <i class="fas fa-sticky-note text-gray-400"></i> Keterangan (Opsional)
                </label>
                <textarea asp-for="Keterangan" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"></textarea>
                <span asp-validation-for="Keterangan" class="text-red-600 text-sm"></span>
            </div>
            
            <div class="flex gap-4">
                <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg transition flex items-center justify-center gap-2 font-medium">
                    <i class="fas fa-save"></i>
                    Update
                </button>
                <a asp-action="Index" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 py-3 rounded-lg transition flex items-center justify-center gap-2 font-medium">
                    <i class="fas fa-times"></i>
                    Batal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}