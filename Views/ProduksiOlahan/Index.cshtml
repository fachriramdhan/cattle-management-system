@model IEnumerable<SimSapi.Models.ProduksiOlahan>

@{
    ViewData["Title"] = "Produksi Olahan";
}

<div class="space-y-6">

    <!-- ================= HEADER & FILTER ================= -->
    <div class="relative bg-slate-900 border border-slate-800 rounded-2xl p-6 shadow space-y-5 overflow-hidden">

        <!-- ICON SUSU (BACKGROUND KIRI) -->
        <i class="fas fa-blender absolute left-6 top-1/2 -translate-y-1/2
                  text-[200px] text-orange-500/10
                  pointer-events-none select-none"></i>

        <!-- CONTENT -->
        <div class="relative flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div class="pl-2 md:pl-20">
                <h2 class="text-xl font-bold text-white">
                    Data Produksi Olahan
                </h2>
                <p class="text-slate-400 text-sm mt-1">
                    Kelola yogurt, keju, dan produk olahan susu lainnya
                </p>
            </div>

            <a asp-action="Create"
               class="flex items-center gap-2 bg-orange-500/10 text-orange-400
                      px-5 py-2 rounded-xl hover:bg-orange-500/20 transition">
                <i class="fas fa-plus"></i>
                Tambah Produksi
            </a>
        </div>

        <!-- FILTER -->
        <form method="get"
              class="relative grid grid-cols-1 md:grid-cols-4 gap-3">

            <select name="jenis"
                    class="bg-slate-950 border border-slate-800 text-slate-200 rounded-xl px-4 py-2">
                <option value="">Semua Jenis</option>
                <option value="Yogurt">Yogurt</option>
                <option value="Keju">Keju</option>
                <option value="Susu_Pasteurisasi">Susu Pasteurisasi</option>
                <option value="Mentega">Mentega</option>
                <option value="Es_Krim">Es Krim</option>
                <option value="Kefir">Kefir</option>
                <option value="Susu_Bubuk">Susu Bubuk</option>
            </select>

            <select name="status"
                    class="bg-slate-950 border border-slate-800 text-slate-200 rounded-xl px-4 py-2">
                <option value="">Semua Status</option>
                <option value="Tersedia">Tersedia</option>
                <option value="Terjual">Terjual</option>
                <option value="Kadaluarsa">Kadaluarsa</option>
            </select>

            <input type="date" name="startDate"
                   class="bg-slate-950 border border-slate-800 text-slate-200 rounded-xl px-4 py-2" />

            <button type="submit"
                    class="bg-slate-800 hover:bg-slate-700 text-white
                           rounded-xl flex items-center justify-center gap-2 transition">
                <i class="fas fa-filter"></i>
                Filter
            </button>
        </form>
    </div>

    <!-- ================= SUMMARY CARD ================= -->
    @if (Model.Any())
    {
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">

            <!-- TOTAL PRODUKSI (ORANGE DARK) -->
            <div class="bg-gradient-to-r from-orange-700 to-orange-800 rounded-2xl p-6 text-white shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-orange-200 text-sm">Total Produksi</p>
                        <p class="text-3xl font-bold mt-1">@Model.Count()</p>
                    </div>
                    <i class="fas fa-box text-3xl opacity-30"></i>
                </div>
            </div>

            <!-- TERSEDIA (GREEN DARK) -->
            <div class="bg-gradient-to-r from-emerald-700 to-emerald-800 rounded-2xl p-6 text-white shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-emerald-200 text-sm">Tersedia</p>
                        <p class="text-3xl font-bold mt-1">
                            @Model.Count(x => x.StatusProduksi == "Tersedia")
                        </p>
                    </div>
                    <i class="fas fa-check-circle text-3xl opacity-30"></i>
                </div>
            </div>

            <!-- TERJUAL (BLUE DARK) -->
            <div class="bg-gradient-to-r from-sky-700 to-sky-800 rounded-2xl p-6 text-white shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-sky-200 text-sm">Terjual</p>
                        <p class="text-3xl font-bold mt-1">
                            @Model.Count(x => x.StatusProduksi == "Terjual")
                        </p>
                    </div>
                    <i class="fas fa-shopping-cart text-3xl opacity-30"></i>
                </div>
            </div>

            <!-- TOTAL PENDAPATAN (PURPLE DARK) -->
            <div class="bg-gradient-to-r from-purple-700 to-purple-800 rounded-2xl p-6 text-white shadow">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-purple-200 text-sm">Total Pendapatan</p>
                        <p class="text-xl font-bold mt-1">
                            Rp @Model.Sum(x => x.HargaJual ?? 0).ToString("N0")
                        </p>
                    </div>
                    <i class="fas fa-chart-line text-3xl opacity-30"></i>
                </div>
            </div>
        </div>
    }

    <!-- ================= TABLE ================= -->
    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow overflow-hidden">

        <div class="overflow-x-auto">
            <table class="w-full text-sm">

                <thead class="bg-slate-950 text-slate-400 uppercase text-xs">
                    <tr>
                        <th class="px-6 py-4 text-left">Tanggal</th>
                        <th class="px-6 py-4 text-left">Produk</th>
                        <th class="px-6 py-4 text-left">Jenis</th>
                        <th class="px-6 py-4 text-left">Jumlah</th>
                        <th class="px-6 py-4 text-left">Bahan Baku</th>
                        <th class="px-6 py-4 text-left">Harga</th>
                        <th class="px-6 py-4 text-left">Status</th>
                        <th class="px-6 py-4 text-left">Aksi</th>
                    </tr>
                </thead>

                <tbody class="divide-y divide-slate-800">

                @foreach (var item in Model)
                {
                    <tr class="hover:bg-slate-950 transition">
                        <td class="px-6 py-4 text-slate-200">
                            @item.TanggalProduksi.ToString("dd/MM/yyyy")
                        </td>

                        <td class="px-6 py-4 text-white font-medium">
                            @item.NamaProduk
                        </td>

                        <td class="px-6 py-4">
                            <span class="px-2 py-1 text-xs rounded-lg bg-orange-500/10 text-orange-400">
                                @item.JenisOlahan.ToString().Replace("_", " ")
                            </span>
                        </td>

                        <td class="px-6 py-4 text-slate-200">
                            <strong>@item.JumlahProduksi</strong> @item.Satuan
                        </td>

                        <td class="px-6 py-4 text-slate-300">
                            @(item.BahanBakuSusu.HasValue ? $"{item.BahanBakuSusu:N2} L" : "-")
                        </td>

                        <td class="px-6 py-4 text-slate-300">
                            @(item.HargaJual.HasValue ? $"Rp {item.HargaJual:N0}" : "-")
                        </td>

                        <td class="px-6 py-4">
                            <span class="px-2 py-1 text-xs rounded-lg
                                @(item.StatusProduksi == "Tersedia"
                                    ? "bg-emerald-500/10 text-emerald-400"
                                    : item.StatusProduksi == "Terjual"
                                        ? "bg-sky-500/10 text-sky-400"
                                        : "bg-red-500/10 text-red-400")">
                                @item.StatusProduksi
                            </span>
                        </td>

                        <td class="px-6 py-4 flex gap-4">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="text-sky-400 hover:text-sky-300">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button onclick="confirmDelete(@item.Id)"
                                    class="text-red-400 hover:text-red-300">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>

<form id="deleteForm" method="post" class="hidden">
    @Html.AntiForgeryToken()
</form>
