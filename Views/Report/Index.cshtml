@{
    ViewData["Title"] = "Laporan Produksi Susu";
}

<div class="space-y-6">

    <!-- ================= HEADER ================= -->
    <div class="relative bg-slate-900 border border-slate-800 rounded-2xl p-6 shadow overflow-hidden">

        <!-- Icon Background (kiri, sama seperti sapi) -->
        <i class="fas fa-file-pdf absolute left-6 top-1/2 -translate-y-1/2
                  text-[200px] text-red-500/10
                  pointer-events-none select-none"></i>

        <div class="relative flex items-center justify-between gap-4">

            <div class="pl-2 md:pl-20">
                <h2 class="text-xl font-bold text-white">
                    Laporan Produksi Susu
                </h2>
                <p class="text-slate-400 text-sm mt-1">
                    Generate laporan produksi susu dalam format PDF
                </p>
            </div>

            <div class="hidden md:flex items-center gap-2 text-slate-400 text-sm">
                <i class="fas fa-file-pdf text-red-400"></i>
                PDF Export
            </div>
        </div>
    </div>

    <!-- ================= MAIN CONTENT ================= -->
    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow p-6">

        <form asp-action="GeneratePDF" method="post">
            @Html.AntiForgeryToken()

            <!-- GRID UTAMA (FORM + PREVIEW) -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                <!-- ================= FORM ================= -->
                <div class="lg:col-span-2 space-y-5">

                    <h3 class="text-slate-200 font-semibold flex items-center gap-2">
                        <i class="far fa-calendar-alt text-sky-400"></i>
                        Periode Laporan
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-slate-300 mb-2">
                                Tanggal Mulai
                            </label>
                            <input type="date" name="startDate" required
                                   class="w-full bg-slate-950 border border-slate-800 text-slate-200
                                          rounded-xl px-4 py-2
                                          focus:outline-none focus:ring-2 focus:ring-sky-500" />
                        </div>

                        <div>
                            <label class="block text-slate-300 mb-2">
                                Tanggal Akhir
                            </label>
                            <input type="date" name="endDate" required
                                   class="w-full bg-slate-950 border border-slate-800 text-slate-200
                                          rounded-xl px-4 py-2
                                          focus:outline-none focus:ring-2 focus:ring-sky-500" />
                        </div>
                    </div>

                    <!-- INFO -->
                    <div class="bg-sky-500/10 border border-sky-500/20 rounded-xl p-4">
                        <div class="flex gap-3 text-sm text-slate-300">
                            <i class="fas fa-info-circle text-sky-400 mt-1"></i>
                            <ul class="space-y-1 list-disc list-inside">
                                <li>Laporan berdasarkan rentang tanggal</li>
                                <li>Menampilkan data produksi per sapi</li>
                                <li>File otomatis terunduh</li>
                            </ul>
                        </div>
                    </div>

                    <!-- ACTION -->
                    <button type="submit"
                            class="w-full bg-red-500/10 text-red-400
                                   hover:bg-red-500/20
                                   rounded-xl py-3
                                   flex items-center justify-center gap-3
                                   transition font-semibold">
                        <i class="fas fa-file-pdf"></i>
                        Generate Laporan PDF
                    </button>
                </div>

                <!-- ================= PREVIEW ================= -->
                <div class="bg-slate-950 border border-slate-800 rounded-xl p-5 text-sm space-y-4">

                    <h4 class="text-slate-200 font-semibold flex items-center gap-2">
                        <i class="fas fa-eye text-slate-400"></i>
                        Preview
                    </h4>

                    <div class="border-b border-slate-800 pb-2 flex justify-between">
                        <span class="text-slate-200 font-medium">
                            LAPORAN PRODUKSI
                        </span>
                        <span class="text-slate-400 text-xs">
                            PDF
                        </span>
                    </div>

                    <div class="space-y-3">
                        <div>
                            <p class="text-xs text-slate-500">Periode</p>
                            <p class="text-slate-200">
                                01/01/2026 â€“ 31/01/2026
                            </p>
                        </div>

                        <div>
                            <p class="text-xs text-slate-500">Total Produksi</p>
                            <p class="text-emerald-400 font-semibold">
                                1.234,56 Liter
                            </p>
                        </div>
                    </div>

                    <p class="text-xs text-slate-500 italic">
                        * Contoh tampilan laporan
                    </p>
                </div>

            </div>
        </form>
    </div>
</div>
