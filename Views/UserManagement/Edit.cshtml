@model SimSapi.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-8">
        <div class="flex items-center gap-4 mb-6">
            <div class="bg-orange-100 rounded-full p-4">
                <i class="fas fa-user-edit text-orange-600 text-2xl"></i>
            </div>
            <div>
                <h3 class="text-2xl font-bold text-gray-800">Edit User</h3>
                <p class="text-gray-600 text-sm">Update informasi akun user</p>
            </div>
        </div>
        
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg mb-6"></div>
            
            <!-- Informasi Akun -->
            <div class="border-b border-gray-200 pb-4 mb-6">
                <h4 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
                    <i class="fas fa-key text-blue-600"></i>
                    Informasi Akun
                </h4>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="NamaLengkap" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-user text-gray-400"></i> Nama Lengkap
                    </label>
                    <input asp-for="NamaLengkap" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="NamaLengkap" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="Email" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-envelope text-gray-400"></i> Email
                    </label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="Password" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-lock text-gray-400"></i> Password Baru
                    </label>
                    <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Kosongkan jika tidak diubah" />
                    <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                    <p class="text-xs text-gray-500 mt-1">
                        <i class="fas fa-info-circle"></i> Kosongkan jika tidak ingin mengubah password
                    </p>
                </div>
                
                <div>
                    <label asp-for="Role" class="block text-gray-700 font-medium mb-2">
                        <i class="fas fa-user-tag text-gray-400"></i> Role
                    </label>
                    <select asp-for="Role" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="User">User (Peternak)</option>
                        <option value="Admin">Admin (Administrator)</option>
                    </select>
                    <span asp-validation-for="Role" class="text-red-600 text-sm"></span>
                </div>
            </div>
            
            <div class="mb-6">
                <label class="flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <span class="ml-2 text-gray-700 font-medium">
                        <i class="fas fa-toggle-on text-green-600"></i> User Aktif
                    </span>
                </label>
                <p class="text-xs text-gray-500 mt-1 ml-6">Nonaktifkan untuk melarang user login</p>
            </div>
            
            <!-- Link ke Peternak -->
            <div class="border-b border-gray-200 pb-4 mb-6 mt-8">
                <h4 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
                    <i class="fas fa-link text-green-600"></i>
                    Link ke Data Peternak
                </h4>
            </div>
            
            <div class="mb-6">
                <label asp-for="PeternakId" class="block text-gray-700 font-medium mb-2">
                    <i class="fas fa-users text-gray-400"></i> Pilih Peternak
                </label>
                <select asp-for="PeternakId" asp-items="ViewBag.PeternakId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">-- Tidak ada link --</option>
                </select>
                <span asp-validation-for="PeternakId" class="text-red-600 text-sm"></span>
            </div>
            
            <div class="flex gap-4">
                <button type="submit" class="flex-1 bg-orange-600 hover:bg-orange-700 text-white py-3 rounded-lg transition flex items-center justify-center gap-2 font-medium">
                    <i class="fas fa-save"></i>
                    Update User
                </button>
                <a asp-action="Index" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 py-3 rounded-lg transition flex items-center justify-center gap-2 font-medium">
                    <i class="fas fa-times"></i>
                    Batal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}